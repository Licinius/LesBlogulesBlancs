{% extends 'base.html.twig' %}

{% block body %}
    <!-- Navigation -->


    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h2 class="page-header">
                    Les Blogules Blancs<br>
                    <small>Blog concernant les stars des années 80-90 et la science</small>
                </h2>


                {% for article in articles %}
                    <h2>
                        <a href="/post/{{ article.urlAlias }}">{{article.title}}</a>
                    </h2>
                    <p><span class="glyphicon glyphicon-time"></span> {{ article.published.format('d/m/Y G:ia') }}</p>

                    <p>{{ article.content }}</p>
                    <a class="btn btn-primary" href="/post/{{ article.urlAlias }}">Lire l'article<span class="glyphicon glyphicon-chevron-right"></span></a>
                {% endfor %}
                <hr>

                <hr>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Précédent</a>
                    </li>
                    <li class="next">
                        <a href="#">Suivant &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>
                <!-- Side Widget Well -->
                <div class="well">
                    <img class="center-block img-fluid" src="http://bouveronmaxi.me/CapilloTracteur/images/pubs/daleks.jpg"/>
                </div>

            </div>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Blogules Blancs 2018</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}
